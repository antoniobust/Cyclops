<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.logIn.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="12:8"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>


    <FrameLayout
        android:id="@+id/login_activity_container"
        android:layout_width="@dimen/match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <include
            layout="@layout/light_bulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>

        <Button
            android:id="@+id/action_chip"
            style="@style/AppTheme.ActionChip"
            android:layout_gravity="center|bottom"
            android:layout_margin="8dp"
            android:drawablePadding="0dp"
            android:drawableTint="@android:color/white"
            android:text="@string/add_server_label"
            android:visibility="visible"
            tools:text="add new instance"
            tools:drawableStart="@drawable/ic_add"/>

        <ProgressBar
            android:id="@+id/login_progress_view"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="gone"/>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
