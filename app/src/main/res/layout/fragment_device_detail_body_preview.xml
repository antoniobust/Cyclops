<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/device_details_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="150dp"
        android:transitionName="details_card_transition"
        app:cardBackgroundColor="@android:color/white"
        app:contentPadding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/info_loading_view"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/device_info_view_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                app:layout_columnSpan="2"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/device_details_info_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:minHeight="150dp"
                android:nestedScrollingEnabled="false"
                android:stretchMode="columnWidth"
                app:spanCount="2"
                tools:layoutManager="GridLayoutManager"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="top"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="@string/more_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/device_details_profiles_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="150dp"
        android:transitionName="profiles_card_transition"
        app:cardBackgroundColor="@android:color/white"
        app:contentPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/device_details_info_card">

        <ProgressBar
            android:id="@+id/profiles_loading_view"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/profiles_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_inbox"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/details_profiles_view_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                app:layout_columnSpan="2"/>

            <com.mdmobile.cyclops.utils.RecyclerEmptyView
                android:id="@+id/device_details_profiles_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:minHeight="150dp"
                android:nestedScrollingEnabled="false"
                android:stretchMode="columnWidth"
                app:spanCount="2"
                tools:layoutManager="GridLayoutManager"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/more_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/device_details_apps_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="150dp"
        android:transitionName="application_card_transition"
        app:cardBackgroundColor="@android:color/white"
        app:contentPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/device_details_profiles_card">

        <ProgressBar
            android:id="@+id/apps_loading_view"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/apps_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_inbox"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/details_installed_apps_view_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                app:layout_columnSpan="2"/>

            <com.mdmobile.cyclops.utils.RecyclerEmptyView
                android:id="@+id/device_details_apps_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:minHeight="150dp"
                android:nestedScrollingEnabled="false"
                android:stretchMode="columnWidth"
                app:spanCount="2"
                tools:layoutManager="GridLayoutManager"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/more_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

