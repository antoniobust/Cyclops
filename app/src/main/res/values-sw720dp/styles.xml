<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Fragments in main activity style-->
    <style name="AppTheme.MainActivity.Fragment" parent="AppTheme">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/max_content_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.DetailsActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:windowMinWidthMajor">@dimen/max_content_size</item>
        <item name="android:windowMinWidthMinor">@dimen/max_content_size</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

</resources>