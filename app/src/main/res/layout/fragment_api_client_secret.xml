<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/api_client_fragment"
              android:layout_width="@dimen/match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:orientation="vertical"
              tools:background="@android:color/black">

    <include layout="@layout/info_button"/>

    <EditText
        android:id="@+id/client_id_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/client_id_hint"
        android:textColorHint="@android:color/white"
        android:inputType="textCapWords"/>

    <EditText
        android:textColorHint="@android:color/white"
        android:id="@+id/api_secret_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/api_secret_hint"
        android:inputType="textCapWords"/>

</LinearLayout>
