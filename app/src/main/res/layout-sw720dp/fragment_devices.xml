<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/main_fragment_with"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <android.support.v4.widget.SwipeRefreshLayout

        android:id="@+id/devices_swipe_refresh"
        style="@style/AppTheme.MainActivity.Fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/devices_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:listitem="@layout/list_item_img_txt_img"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <!--Only used in tablet Mode so we can display selected device details-->
    <android.support.v7.widget.CardView
        android:id="@+id/main_activity_details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="3"
        android:padding="24dp"
        android:visibility="gone"
        app:cardElevation="8dp"
        tools:visibility="visible"
        tools:layout_height="150dp"
        android:layout_gravity="top"/>
</LinearLayout>


