<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.logIn.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="12:8"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/login_title_strip"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#EBECED"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/add_user_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center|end"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:onClick="changeSection"
            android:text="@string/add_new_user_label"
            android:textAppearance="?android:textAppearanceButton"
            android:textColor="@color/colorAccent"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/add_server_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center|start"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_arrow_left"
            android:gravity="center_vertical"
            android:onClick="changeSection"
            android:text="@string/add_server_label"
            android:textAppearance="?android:textAppearanceButton"
            android:textColor="@color/colorAccent"
            android:visibility="invisible"
            tools:visibility="visible"/>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/login_activity_container"
        android:layout_width="@dimen/match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title_strip">

        <include
            layout="@layout/light_bulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
