<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:id="@+id/server_details_fragment"
       android:name="com.mdmobile.pocketconsole.ServiceDetailsActivityFragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:layout="@layout/fragment_server_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/server_details_name"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="UK-CLOUD"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/server_details_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:verticalSpacing="8dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</merge>
