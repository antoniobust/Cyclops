<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    android:layout_margin="4dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:targetApi="lollipop"
    android:weightSum="10">

    <View
        android:id="@+id/list_item_colored_marker"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        tools:background="@color/darkGreen"/>

    <ImageView
        android:id="@+id/list_item_device_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="14dp"
        tools:src="@drawable/ic_phone_android"/>

    <TextView
        android:id="@+id/list_item_device_name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:textStyle="bold"
        tools:text="AndroidPlus0001"/>

    <ImageView
        android:id="@+id/list_item_menu_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:onClick="showActionsMenu"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_option_24dp"/>

    <ImageView
        android:id="@+id/list_item_arrow_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_keyboard_arrow_right"/>


</LinearLayout>
